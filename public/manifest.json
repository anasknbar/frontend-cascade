{
  "manifest_version": 3,
  "name": "CASCADE",
  "short_name": "CASCADE",
  "version": "0.0.1",
  "description": "CASCADE extention is TextEditor that enables you create, edit and export PDF/WORD file right in the chrome extention ",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "192": "/icons/icon192.png"
  },
  "permissions": [
    "webNavigation",
    "contextMenus",
    "alarms",
    "webRequest",
    "downloads",
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "cookies"
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.pdf", "*.docx", "index.html", "/scripts/*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>",
    "https://pdf-converter.cke-cs.com/v1/convert/",
    "https://*/*"
  ],
  "action": {
    "default_popup": "index.html"
  }
}
